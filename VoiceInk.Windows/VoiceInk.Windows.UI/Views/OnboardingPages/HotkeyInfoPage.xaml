<Page x:Class="VoiceInk.Windows.UI.Views.OnboardingPages.HotkeyInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="HotkeyInfoPage">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="Global Hotkey" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="Press Ctrl + Shift + R anywhere in Windows to start or stop recording." FontSize="16" TextWrapping="Wrap" TextAlignment="Center" Margin="0 10 0 0"/>
        <Border Background="LightGray" CornerRadius="5" Padding="10 5" Margin="0 20 0 0" HorizontalAlignment="Center">
            <TextBlock Text="Ctrl + Shift + R" FontSize="18" FontWeight="SemiBold"/>
        </Border>
    </StackPanel>
</Page>
